<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:padding="16dp"
    android:orientation="vertical">

    <Button
        android:id="@+id/btn_generate_maze"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="createMaze"
        android:text="Generate Maze" />

    <Button
        android:id="@+id/btn_open_parameters"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Parameters"
        android:onClick="openParameters"
        android:layout_marginTop="8dp" />

    <ImageView
        android:id="@+id/maze_image"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="12dp"
        android:background="#DDDDDD"
        android:contentDescription="Maze Display" />

    <EditText
        android:id="@+id/maze_name_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter maze name to save"
        android:layout_marginTop="8dp" />

    <Button
        android:id="@+id/btn_save_maze"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Save Maze"
        android:onClick="saveMaze"
        android:layout_marginTop="8dp" />
    <Button
        android:id="@+id/btn_start_game"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="startGame"
        android:text="Start Game"/>
</LinearLayout>